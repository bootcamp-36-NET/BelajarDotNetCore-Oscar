@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isInRole = false;
    if (Context.Session.IsAvailable)
    {
        var stringRole = Context.Session.GetString("roles");
        var roles = stringRole.Split(',').ToList();
        isInRole = roles.Where(Q => Q == "ADMIN").Any();
    }
}

<div class="container">
    @if (isInRole)
    {
        <div class="row">
            <a class="btn btn-primary" href="/Employees" role="button">Employee List</a>
        </div>
    }
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcRFKW1vKJqBSjiPRwCCb6CWm29odT1u4N3nZQ&usqp=CAU" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4 id="UserName">John Doe</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">User Id</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <p id="Id"></p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary" id="Email"> 
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                -
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Roles</h6>
                            </div>
                            <div class="col-sm-9 text-secondary" id="RoleName">
                            </div>
                        </div>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/scripts/UserProfile/UserProfileScript.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>

}